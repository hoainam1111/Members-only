<h1>All Posts</h1>

<% if @posts.any? %>
  <ul>
    <% @posts.each do |post| %>
      <li>
        <h2><%= post.title %></h2>
        <p><%= truncate(post.body, length: 100) %></p>
        <p><strong>Author:</strong> <%= post.user.email %></p>
        
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No posts available.</p>
<% end %>

<%= link_to 'New Post', new_post_path %>
